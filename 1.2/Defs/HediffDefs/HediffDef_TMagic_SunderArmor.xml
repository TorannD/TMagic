<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_SunderArmorHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
    <label>Sunder Armor</label>
	<description>Reduces armor rating.</description>
	<makesSickThought>false</makesSickThought>
	<maxSeverity>50.0</maxSeverity>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-50</severityPerDay>
      </li>
    </comps>
    <stages>
	  <li>
        <label>I</label>
        <minSeverity>0.1</minSeverity>
		<statOffsets>
		  <ArmorRating_Blunt>-.8</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-.8</ArmorRating_Sharp>
		  <ArmorRating_Heat>-.8</ArmorRating_Heat>
		  <ArmorRating_Alignment>-.25</ArmorRating_Alignment>
		</statOffsets>
      </li>
      <li>
        <label>II</label>
        <minSeverity>25</minSeverity>
		<statOffsets>
		  <ArmorRating_Blunt>-1.2</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-1.2</ArmorRating_Sharp>
		  <ArmorRating_Heat>-1.2</ArmorRating_Heat>
		  <ArmorRating_Alignment>-.5</ArmorRating_Alignment>
		</statOffsets>
      </li>
      <li>
        <label>III</label>
        <minSeverity>40</minSeverity>
		<statOffsets>
		  <ArmorRating_Blunt>-1.5</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-1.5</ArmorRating_Sharp>
		  <ArmorRating_Heat>-1.5</ArmorRating_Heat>
		  <ArmorRating_Alignment>-.75</ArmorRating_Alignment>
		</statOffsets>
      </li>  	  
    </stages>
  </HediffDef>
  
</Defs>
