<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_ArcaneWeakness</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.55, 0.05, 1)</defaultLabelColor>
    <label>arcane weakness</label>
	<description>Arcane Weakness is a byproduct of casting magical abilities. Minor abilities with a mana cost less than 25 will not incur Arcane Weakness. The amount of Arcane Weakness that will affect a mage is relative to the mana cost of the ability.</description>
<!--     <lethalSeverity>40</lethalSeverity> -->
	<tendable>false</tendable>
	<makesSickThought>true</makesSickThought>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-12</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>weakened</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>drained</label>
        <minSeverity>5</minSeverity>
		<vomitMtbDays>0.5</vomitMtbDays>
		<hungerRateFactor>1.2</hungerRateFactor>
		<restFallFactor>1.2</restFallFactor>		
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>severely ill</label>
        <minSeverity>10</minSeverity>
		<vomitMtbDays>0.2</vomitMtbDays>
		<painOffset>0.10</painOffset>
		<hungerRateFactor>1.4</hungerRateFactor>
		<restFallFactor>1.4</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>catatonic</label>
        <minSeverity>20</minSeverity>
		<vomitMtbDays>0.4</vomitMtbDays>
		<painOffset>0.40</painOffset>
		<hungerRateFactor>2</hungerRateFactor>
		<restFallFactor>2</restFallFactor>
		<lifeThreatening>false</lifeThreatening>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <offset>-0.4</offset>
          </li>
		  <li>
            <capacity>Eating</capacity>
            <offset>-0.2</offset>
          </li>		  
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>near death</label>
        <minSeverity>39</minSeverity>
		<lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
		  <li>
            <capacity>BloodPumping</capacity>
            <setMax>0.0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>
